{
  "name": "school-tutor-ai-judge-evaluation",
  "version": "3.0.0",
  "description": "AI Judge Evaluation System - Objective AI quality assessment using GPT-4 as judge",
  "main": "dist/ai-judge-evaluator.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/run-evaluation.ts",
    "start": "node dist/run-evaluation.js",
    "evaluate": "pnpm build && node dist/run-evaluation.js",
    "eval:math": "pnpm build && node dist/run-evaluation.js --subject mathematics --grade 8 --tests 5",
    "eval:science": "pnpm build && node dist/run-evaluation.js --subject science --grade 8 --tests 3",
    "eval:full": "pnpm build && node dist/run-evaluation.js --full-suite",
    "eval:aman": "pnpm build && node dist/run-evaluation.js --student-profile ./profiles/aman-negi.json --tests 5 --verbose",
    "test": "pnpm build && node dist/test-evaluation.js",
    "test:dev": "tsx src/test-evaluation.ts",
    "help": "pnpm build && node dist/run-evaluation.js --help",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "ai-evaluation",
    "ai-judge",
    "llm-quality",
    "openai-gpt4",
    "educational-ai",
    "tutor-evaluation",
    "objective-assessment"
  ],
  "author": "Pankaj Negi",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

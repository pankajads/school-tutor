# Environment variables for development
NODE_ENV=development
AWS_REGION=us-east-1

# Backend Configuration
API_GATEWAY_URL=https://your-api-id.execute-api.us-east-1.amazonaws.com/v1
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# DynamoDB Tables
STUDENT_TABLE=school-tutor-students
PROGRESS_TABLE=school-tutor-progress
EVALUATION_TABLE=school-tutor-evaluation
METRICS_TABLE=school-tutor-metrics

# S3 Buckets
CONTENT_BUCKET=school-tutor-content-ACCOUNT-REGION
EVALUATION_BUCKET=school-tutor-evaluation-ACCOUNT-REGION

# System Configuration
MAX_STUDENTS=5
SESSION_TIMEOUT=30
EVALUATION_FREQUENCY=daily

# Evaluation Thresholds
ALERT_THRESHOLD_ACCURACY=80
ALERT_THRESHOLD_FACTUALITY=85
ALERT_THRESHOLD_HALLUCINATION=10
ALERT_THRESHOLD_ENGAGEMENT=70

# Frontend Configuration (for future use)
NEXT_PUBLIC_API_URL=https://your-api-id.execute-api.us-east-1.amazonaws.com/v1
NEXT_PUBLIC_REGION=us-east-1
NEXT_PUBLIC_USER_POOL_ID=us-east-1_XXXXXXXXX
NEXT_PUBLIC_USER_POOL_WEB_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXX

# Evaluation Framework Keys (optional)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
